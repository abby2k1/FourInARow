@page
@using Team9.Connect4.BL.Models;
@model Team9.Connect4.WebUI.Pages.Shared.GameHistoryModel
@{
    ViewData["Title"] = "Leaderboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3 class="ps-2">Are you sure you want to delete this?</h3>
<div class="ps-2">
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player2)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardState)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameCode)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turns)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
